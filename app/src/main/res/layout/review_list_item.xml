<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">


    <TextView
        android:id="@+id/review_item_author_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center_vertical"
        android:text="@string/reviews_author"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/review_item_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_alignBottom="@id/review_item_author_label"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/review_item_author_label"
        android:gravity="center_vertical"
        android:textSize="18dp" />


    <TextView
        android:id="@+id/review_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/review_item_author_label"
        android:layout_margin="15dp"
        android:justificationMode="inter_word"
        android:textSize="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#6F6F6F"></View>


</RelativeLayout>