<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_movie2"
        android:layout_width="200dp"
        android:layout_height="320dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="70dp"
        android:scaleType="fitCenter"         />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="70dp"
        android:layout_marginTop="70dp"
        android:layout_toRightOf="@id/img_movie2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_label2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/label_text"
            android:layout_marginTop="0dp"
            android:text="@string/label_title" />

        <TextView
            android:id="@+id/tv_title_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/content_text" />

        <TextView
            android:id="@+id/tv_user_rating_label2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/label_text"
            android:text="@string/label_user_rating" />

        <TextView
            android:id="@+id/tv_user_rating2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/content_text"
            />


        <TextView
            android:id="@+id/tv_date_label2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/label_text"
            android:text="@string/label_release_date" />

        <TextView
            android:id="@+id/tv_date2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/content_text"
            />


    </LinearLayout>

    <TextView
        android:id="@+id/tv_synopsis_label2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/label_text"
        android:layout_marginTop="80dp"
        android:text="@string/label_plot_synopsis"
        android:gravity="center"
        android:layout_below="@id/img_movie2" />

    <TextView
        android:id="@+id/tv_synopsis2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        style="@style/plot_text"
        android:justificationMode="inter_word"
        android:layout_below="@id/tv_synopsis_label2" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp">


        <Button
            android:layout_width="match_parent"
            android:id="@+id/btn_trailer"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="#FFFF"
            android:layout_height="wrap_content"
            android:text="@string/button_trailer"
            android:background="@drawable/my_button"/>
        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textSize="18sp"
            android:id="@+id/btn_review"
            android:textColor="#FFFF"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="@string/button_review"
            android:background="@drawable/my_button"/>


    </LinearLayout>

</RelativeLayout>